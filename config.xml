<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.phonegap.example"
    versionCode = "10"
    version     = "1.0.0" >

<!-- versionCode is optional and Android only -->

  <name>KG-Roca</name>

  <description>
      Events and Decor
  </description>

  <author href="https://www.dotmp3group.co.za" email="info@dotmp3group.co.za">
      DotMp3 Group
  </author>
  
  <content src="index.html" />
  
  	<platform name="ios">
 	 </platform>


	<platform name="android">
		<icon src="logo.png" platform="android" qualifier="ldpi" />
		<icon src="logo.png" platform="android" qualifier="mdpi" />
		<icon src="logo.png" platform="android" qualifier="hdpi" />
		<icon src="logo.png" platform="android" qualifier="xhdpi" />
		<icon src="logo.png" platform="android" qualifier="xxhdpi" />

  		<splash src="splash.png" platform="android" qualifier="ldpi" />
		<splash src="splash.png" platform="android" qualifier="mdpi" />
		<splash src="splash.png" platform="android" qualifier="hdpi" />
		<splash src="splash.png" platform="android" qualifier="xhdpi" />
		<splash src="splash.png" platform="android" qualifier="fr-xhdpi" />
		<splash src="splash.png" platform="android" qualifier="port-xxhdpi" />
		<splash src="splash.png" platform="android" qualifier="land-xxhdpi" />
	</platform>

	<platform name="winphone">
		<icon src="logo.png" platform="winphone" />
		<icon src="logo.png" platform="winphone" role="background" />

		<splash src="splash.png" />
	</platform>

  <!-- all platforms -->
  <preference name="phonegap-version" value="cli-6.3.0" />
  <preference name="orientation" value="default" />
  <preference name="fullscreen" value="true" />

  <!-- iOS only -->
  <preference name="target-device" value="universal" />
  <preference name="prerendered-icon" value="true" />
  <preference name="detect-data-types" value="true" />
  <preference name="exit-on-suspend" value="true" />

</widget>
